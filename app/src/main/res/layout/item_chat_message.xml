<layout xmlns:android="http://schemas.android.com/apk/res/android"
    android:shadowColor="@color/gray">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:padding="4dp">


        <LinearLayout
            android:id="@+id/sentMessageLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="2dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/sentMessageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_white"
                android:padding="14dp"
                android:textColor="@android:color/white"
                android:maxWidth="250dp"
                android:ellipsize="end"
                android:scrollHorizontally="false"
                android:lineSpacingExtra="4dp" />

            <TextView
                android:id="@+id/sentMessageTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#808080"
                android:paddingTop="2dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:paddingBottom="2dp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/receivedMessageLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="2dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/receivedMessageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_bright_blue"
                android:padding="14dp"
                android:textColor="@android:color/white"
                android:maxWidth="250dp"
                android:ellipsize="end"
                android:scrollHorizontally="false"
                android:lineSpacingExtra="4dp" />

            <TextView
                android:id="@+id/receivedMessageTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#808080"
                android:paddingTop="2dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:paddingBottom="2dp"
                android:visibility="gone" />

        </LinearLayout>

    </RelativeLayout>

</layout>
